<h2>Edit RFP</h2>

<%= form_for(@rfp) do |f| %>

	<div class="col-md-5 inline floatnone valign-t">
	    <div class="field">
		    <%= f.label :title %><br>
		    <%= f.text_field :title %>
		</div>
	    <div class="field">
		    <%= f.label :description %><br>
		    <%= f.text_area :description %>
	    </div>
	    <div class="field">
		    <%= f.label :category %><br>
		    <%= f.select :category, ['Office Consumables', 'Utilities', 'Capital Goods', 'Facilities', 'Construction and Engineering', 'Metals and Minings'] %>
	    </div><br>
	    <h4>Questions</h4>
	    <ul style="list-style-type:circle">
		    <% Question.all.each_with_index do |question, index| %>
			    <div class="field">
			       <li><%= label_tag question.text %> <%= check_box_tag("questions[#{question.id}]", question.id) %></li>
			    </div>      
			<% end %>	    
	    </ul>
	 	
	 	<br>
	 	<%= f.submit 'Save changes', class: "btn btn-default" %>
	</div> 		
  <% end %>