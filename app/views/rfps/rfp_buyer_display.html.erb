<div class="col-md-7">
	<h4><%= @rfp.title %></h4>
	<table class="table table-striped table-hover ">
  		<thead>
    		<tr>
    			<th>Supplier</th>
    			<% @rfp.get_suppliers.each do |supplier| %>    				
						<th><%= supplier.name %></th>					
				<% end %>
			</tr>
        </thead>
		<tbody>
		<% @rfp.questions.each do |question| %>
			<tr>
				<td><%= question.text %></td>							
				<% question.get_answers(@rfp).each do |answer| %>
					<td><%= answer.text %> </td> 
				<% end %>	
			</tr>		
		<% end %>			
		</tbody>
	</table> 		
</div>
<div class="col-md-3">
    <div class="jumbotron">
    	<div class="container suppliers-for-auction">
	    	Please select the Suppliers for the auction:
	    	<%= form_tag(new_auction_path, :method=>'get', :multipart => true) do %>
		    	<ul style="list-style-type:circle">
			    <% @rfp.get_suppliers.each do |supplier| %>
				    <div class="field">
				        <li><%= label_tag supplier.name %> <%= check_box_tag("suppliers[#{supplier.id}]", supplier.id) %></li>
				    </div>      
				<% end %>	    
		    	</ul>
		    	<%= submit_tag 'Create auction', class: "btn btn-default" %>
		    <% end %>	
	    </div>
	</div>
</div>