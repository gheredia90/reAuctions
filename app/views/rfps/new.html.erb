
<%= form_for(@rfp, :html => {:class => 'form-horizontal'}) do |f| %>
	<fieldset>
	<legend>Create new RFP</legend>
    
	<div class="col-md-4 inline floatnone valign-t">
	    <div class="form-group">
		   <%= f.label :title %><br>		   
		   	<%= f.text_field :title, :class => "form-control" %>
		</div>
	    <div class="form-group">
		    <%= f.label :description %><br>
		    <%= f.text_area :description %>
	    </div>
	    <div class="form-group">
		    <%= f.label :category %><br>
		    <%= f.select :category, ['Office Consumables', 'Utilities', 'Capital Goods', 'Facilities', 'Construction and Engineering', 'Metals and Minings'], {}, {class: 'form-control'} %>
	    </div><br>
	</div>
	<div class="col-md-8 inline floatnone valign-t">    
	    <h5>Questions</h5>
	    <ul style="list-style-type:circle">
		    <% Question.all.each_with_index do |question, index| %>
			    <div class="field">
			        <li><%= label_tag question.text %> <%= check_box_tag("questions[#{question.id}]", question.id) %></li>
			    </div>      
			<% end %>	    
	    </ul>
	 	<br>
	 	<%= f.submit 'Create RFP', class: "btn btn-default" %>
	</div> 
	</fieldset>
  <% end %>