<div class="col-md-6">


	<h4>Opened RFPs</h4>
	<ul class="list-group">
		<% opened_rfps = @my_rfps.select{ |rfp| rfp.opened == true } %>
    <% opened_rfps.each do |rfp| %>
			<li class="list-group-item"><%= rfp.title %>
				<% if rfp.description.present? %> - <%= rfp.description %>
				<% end %>			
				<%= link_to raw('<button type="button" class="btn btn-sm pull-right"><span class="glyphicon glyphicon-asterisk"></span> Open</button>'), rfp_path(rfp) %>
			</li>
		<% end %>
	</ul>

  <%= render "/users/shared/closed_rfps" %>

</div>
<div class="col-md-6">
	<%= render "/users/shared/opened_auctions" %>  
</div>