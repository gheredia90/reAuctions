<div class="col-md-6">


	<h4>Opened RFPs</h4>
	<ul class="list-group">
		<% @available_rfps.each do |rfp| %>
			<li class="list-group-item"><%= rfp.title %>
				<% if rfp.description.present? %> - <%= rfp.description %>
				<% end %>			
				<%= link_to raw('<span class="glyphicon glyphicon-asterisk"></span>'), rfp_path(rfp) %>
			</li>
		<% end %>
	</ul>

</div>
<div class="col-md-6">

	<h4>Opened Auctions</h2>
	<ul class="list-group">
		<% @available_auctions.each do |auction| %>
			<li class="list-group-item"><%= auction.title %>
				<% if auction.description.present? %> - <%= auction.description %>
				<% end %>			
				<%= link_to raw('<span class="glyphicon glyphicon-asterisk"></span>'), auction_path(auction) %>
			</li>
		<% end %>
	</ul>

</div>