<h4>My Closed RFPs</h4>
  <ul class="list-group">
    <% closed_rfps = @my_rfps.select{ |rfp| rfp.opened == false } %>
    <% closed_rfps.each do |rfp| %>
      <li class="list-group-item"><%= rfp.title %>
        <% if rfp.description.present? %> - <%= rfp.description %>
        <% end %>
        <%= link_to raw('<button type="button" class="btn btn-sm pull-right"><span class="glyphicon glyphicon-asterisk"></span> Open</button>'), rfp_path(rfp.id) %>
      </li>
    <% end %>
  </ul>