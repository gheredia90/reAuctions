<div class="col-md-6">
<h4>My RFPs</h4>
	<ul class="list-group">
		<% @my_rfps.each do |rfp| %>
			<li class="list-group-item"><%= rfp.title %>
				<% if rfp.description.present? %> - <%= rfp.description %>
				<% end %>

				
					<%= link_to raw('<button type="button" class="btn btn-sm pull-right"><span class="glyphicon glyphicon-pencil"></span> Edit</button>'), edit_rfp_path(rfp) %>
					<%= link_to raw('<button type="button" class="btn btn-sm pull-right"><span class="glyphicon glyphicon-asterisk"></span> Open</button>'), rfp_path(rfp.id) %>
			</li>
		<% end %>
	</ul>

	<%= link_to raw('<button type="button" id="create-rfp" class="btn btn-default">Create RFP</button>'), new_rfp_path %>
</div>
<div class="col-md-6">
	<h4>My Auctions</h4>
	<ul class="list-group">
		<% @my_auctions.each do |auction| %>
			<li class="list-group-item"><%= auction.title %>
				<% if auction.description.present? %> - <%= auction.description %>
				<% end %>			
				<%= link_to raw('<button type="button" class="btn btn-sm pull-right"><span class="glyphicon glyphicon-asterisk"></span> Open</button>'), auction_path(auction.id) %>
			</li>
		<% end %>
	</ul>
</div>	

