<div class="col-md-4">
	<h4><%= @auction.title %></h4>

	<%= bootstrap_form_tag url: send_bid_path(@auction) do |f| %>
	  	
	      <div class="field">
	        <%= f.number_field :bid %>	        
	      </div> 
                  
	  <br>
	  <div class="actions">
    <span>
	    <%= f.submit "Send new bid"%>
      <button class="btn btn-default pull-right lowest-bid" type="button">
          Lowest_bid <span class="badge"><%= @auction.lowest_bid %></span>
      </button> 	   </span> 
	  </div>
	<% end %>
	
</div>
<div class="col-md-7">
    <div class="jumbotron my-bids"> 
      	
	</div>
</div>